{
  "info": {
    "title": "Baraka API documentation",
    "version": "1.0.0",
    "license": {
      "name": "Sous-traitant Baraka"
    },
    "description": "API REST pour gérer l'application Baraka"
  },
  "basePath": "/api/v1",
  "host": "https://barakaapi.azurewebsites.net",
  "tags": [{
    "name": "Connexion",
    "description": "Méthodes permettant de se connecter"
  },{
    "name": "Bars",
    "description": "Méthodes pour collecter des informations des bars"
  }],
  "paths": {
    "/signup": {
      "post": {
        "tags": ["Connexion"],
        "summary": "/signup",
        "consumes": [
          "application/json"
        ],
        "parameters": [{
          "name": "username",
          "in": "body",
          "required": true,
          "schema": {
            "type": "string",
            "description": "username",
            "example": "Baraka_user"
          }
        },
          {
            "name": "e-mail",
            "in": "body",
            "required": true,
            "schema": {
              "description": "e-mail",
              "type": "string",
              "example": "baraka_user01@gmail.com"
            }
          },
          {
            "name": "password",
            "in": "body",
            "required": true,
            "schema": {
              "description": "password",
              "type": "string",
              "example": "barakaisfun"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK "
          },
          "422": {
            "description": "Erreur",
            "examples": {
              "application/json": {
                "erreur" : "Cette adresse e-mail est dèja associée à un compte"
              }
            }
          }
          }
      }
    },
    "/signin": {
      "post": {
        "tags": ["Connexion"],
        "summary": "/signin",
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "e-mail",
            "in": "body",
            "required": true,
            "schema": {
              "description": "e-mail",
              "type": "string",
              "example": "baraka_user01@gmail.com"
            }
          },
          {
            "name": "password",
            "in": "body",
            "required": true,
            "schema": {
              "description": "password",
              "type": "string",
              "example": "barakaisfun"
            }
          }],
        "responses": {
          "200": {
            "description": "OK"
          },
          "422": {
            "description": "Erreur ",
            "examples": {
              "application/json": {
                "error" : "Le mot de passe ou l'e-mail est invalide"
              }
            }
          }
        }
      }
    },
    "/bar/{barname}": {
      "get": {
        "tags": ["Bars"],
        "summary": "/bar/{barname}",
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "barname",
            "in": "formData",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK return bar(s)",
            "examples": {
              "application/json": {
                "id": "0000ae7ecb",
                "name" : "Toto bar",
                "description": "Je suis un bar",
                "coordgps": "QR8H+G8 Lyon",
                "averageNotation": 4.5,
                "trends": [
                  "trend","cool","stylié"
                ]
              }
            }
          }
        }
      }
    },
    "/": {
      "get": {
        "summary": "/",
        "consumes": [
          "application/json"
        ],
        "parameters": [],
        "responses": {}
      }
    }
  },
  "swagger": "2.0"
}